<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../style/style.css" />
    <title>Info Data Provinsi</title>
  </head>
  <body>
    <div class="container-lg" id="container">
      <div class="button-up">
        <h1>Provinsi dan Kabupaten</h1>
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
          <a class="btn btn-primary me-md-2" href="/postProvinsi">Add Provinsi</a>
          <a class="btn btn-primary" href="/getKabupaten">Add Kabupaten</a>

        </div>
      </div>
      <select
        class="form-select d-flex-inline justify-content-start"
        name="provinsi_id"
        aria-label="Default select example"
      >
        <option selected>Pilih Provinsi</option>
        {{#each data}}
          <option value="{{this.id}}">{{this.nama}}</option>
        {{/each}}
      </select>

      <form
        class="container-lg d-flex"
        style="margin-top: 40px;"
        method=""
        enctype="multipart/form-data"
      >
        {{#each data}}
          <div class="card-index" id="tampil">
            <div
              class="card"
              style="width: 18rem; max-height:100% height: 100px;"
            >
              <div class="d-flex justify-content-md-between">
                <a
                  type="button"
                  class="btn btn-success"
                  id="provinsiUpdate"
                  href="/updateProvinsi/{{this.id}}"
                >Update</a>
                <a
                  type="button"
                  class="btn btn-danger"
                  id="provinsiDelete"
                  href="/deleteProvinsi/{{this.id}}"
                >Hapus</a>
              </div>
              <img src="../{{this.photo.path}}" class="card-img-top" alt="..." />
              <div class="card-body">
                <h5 class="card-title">{{this.nama}}</h5>
                <p class="card-text">{{this.diresmikan}}</p>
              </div>
              <a
                href="/view-detail/{{this.id}}"
                class="btn btn-primary"
              >Detail</a>
            </div>
          </div>
        {{/each}}
      </form>

    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>