<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Provinsi</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="../style/style.css" />
  </head>
  <body>

    <div class="container-lg" id="container">
      <form
        class="card"
        id="provinsiForm"
        action="/postProvinsi"
        method="post"
        enctype="multipart/form-data"
      >
        <div class="card-body" id="card-body">
          <h1>Tambah Provinsi</h1>
          <div id="detail" class="form-floating mb-3">
            <div class="inputBox">
              <label for="nama">Nama Provinsi</label>
              <input
                class="form-control"
                type="text"
                placeholder="Silakan Masukan Nama Provinsi"
                id="Project"
                name="nama"
                aria-label="default input example"
              />
            </div>

            <div class="mb-3">
              <div class="inputBox">
                <label for="start">Diresmikan</label>
                <input
                  class="form-control"
                  type="date"
                  placeholder="Default input"
                  aria-label="default input example"
                  id="start"
                  name="diresmikan"
                />
              </div>
            </div>

            <div class="mb-3" style="display: flex; flex-direction: column;">
              <label for="image" style="padding-bottom:5px ;">Image</label>
              <input
                type="file"
                id="imageUpload"
                name="photo"
                accept="image/*"
              />
            </div>

            <div class="mb-3">
              <label for="pulau">Pulau</label>
              <div class="form-floating">
                  <input
                class="form-control"
                type="text"
                placeholder="Silakan Masukan Nama pulau"
                id="Project"
                name="pulau"
                aria-label="default input example"
              />
              </div>
            </div>

            <div
              class="d-grid gap-2 d-md-flex justify-content-md-end"
              id="btn-save"
            >
              <button
                class="btn btn-primary"
                id="save"
                type="submit"
              >Save</button>
            </div>
          </div>
        </div>
      </form>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
      integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
      integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
      crossorigin="anonymous"
    ></script>
  </body>
</html>